<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:id="@+id/rl_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@color/colorPrimary"
                tools:ignore="UselessParent">

                <com.example.nlospc.potatoapp.widget.IconFontTextView
                    android:id="@+id/tv_return"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:text="@string/ic_return"
                    android:textColor="@color/text_white"
                    android:textSize="32sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="60dp"
                    android:layout_marginStart="60dp"
                    android:maxLines="1"
                    android:textColor="@color/text_white"
                    android:textSize="18sp" />

                <com.example.nlospc.potatoapp.widget.IconFontTextView
                    android:id="@+id/tv_other"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="@string/ic_share"
                    android:textColor="@color/text_white"
                    android:textSize="22sp"
                    android:visibility="visible" />

                <view
                    style="@style/lineStyle"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:indeterminateDrawable="@color/main"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/progress_bar_status" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/webview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            />

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>